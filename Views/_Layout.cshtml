    <script src="~/lib_npm/jquery/jquery.min.js"></script>
    <script>
        function validateZipcode() {
            if (/^\d{5}$|^\d{5}-\d{4}$/.test($("#PostalCode").val()) == false) {
                $("#errorMessage").html('That is not a valid zip code');
                return false;
            }
        }
    </script>
</head>
